# Backend Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# AWS Configuration
# ==========================================
AWS_REGION=us-east-1

# ==========================================
# DynamoDB Tables
# (These are set automatically by CDK deployment)
# ==========================================
USERS_TABLE=dailybread-users
USER_PROFILES_TABLE=dailybread-user-profiles
RECIPES_TABLE=dailybread-recipes
DAILY_TIPS_TABLE=dailybread-daily-tips
USER_FAVORITES_TABLE=dailybread-user-favorites
ORDERS_TABLE=dailybread-orders
MEAL_PLANS_TABLE=dailybread-meal-plans

# ==========================================
# S3 Buckets
# (These are set automatically by CDK deployment)
# ==========================================
CONTENT_BUCKET=dailybread-content-123456789012
USER_UPLOADS_BUCKET=dailybread-user-uploads-123456789012

# ==========================================
# Authentication Configuration
# ==========================================
# Generate a secure random key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# ==========================================
# OpenAI API Configuration
# Required for AI-powered meal recommendations
# Get your key at: https://platform.openai.com/api-keys
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==========================================
# Stripe Payment Configuration (Optional)
# Get your keys at: https://dashboard.stripe.com/apikeys
# ==========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ==========================================
# CORS Configuration
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# Application Settings
# ==========================================
API_VERSION=v1
PROJECT_NAME=Daily Bread API
DEBUG=false
